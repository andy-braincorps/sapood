{
	"prepare" : {
		"dockerfile" : {
			"type" : "path",
			"data" : ".robrt.Dockerfile"
		}
	},
	"build" : {
		"cmds" : [
			"cd $ROBRT_REPOSITORY_DIR",
			"haxelib list",
			"haxe sapo.hxml",
			"haxe comn.hxml",
			"haxe sync.hxml",
			"haxe unit.hxml",
			"tar cvf redist.tgz bin www README.md LICENSE.md",
			"cp -r www bin $ROBRT_OUTPUT_DIR/",
			"cp redist.tgz $ROBRT_OUTPUT_DIR/www/",
			"cp -r docs/mockup $ROBRT_OUTPUT_DIR/www/"
		]
	}
}

