{
	"prepare" : {
		"dockerfile" : {
			"type" : "path",
			"data" : ".robrt.Dockerfile"
		}
	},
	"build" : {
		"cmds" : [
			"cd $ROBRT_REPOSITORY_DIR",
			"haxelib list",
			"haxe sapo.hxml",
			"haxe comn.hxml",
			"haxe sync.hxml",
			"haxe unit.hxml",
			"mkdir -p ndlls",
			"haxelib run bodge-ndlls -Linux64 --out ndlls bodge-flare hxsll",
			"tar -cvf redist.tgz --transform 's,^,sapo/,' .",
			"cp -r www bin ndlls $ROBRT_OUTPUT_DIR/",
			"cp redist.tgz $ROBRT_OUTPUT_DIR/www/",
			"cp -r docs/mockup $ROBRT_OUTPUT_DIR/www/"
		]
	}
}

